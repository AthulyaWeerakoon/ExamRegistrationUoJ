        <div class="filter-header">Department</div>
        <div class="filter-content">
            <select name="department" id="department" class="select-filter">
                <option value=" "> </option>
                <option value="department1">Computer Engineering Department</option>
                <option value="department2">EEE Department</option>
                <option value="department3">Civil Engineering Department</option>
                <option value="department4">Mechanical Engineering Department</option>
            </select>
        </div>
    </div>

    <!-- Semester filter -->
    <div class="filter-box">
        <div class="filter-header">Semester</div>
        <div class="filter-content">
            <select name="semester" id="semester" class="select-filter">
                <option value=" "> </option>
                <option value="semester1">Semester 1</option>
                <option value="semester2">Semester 2</option>
