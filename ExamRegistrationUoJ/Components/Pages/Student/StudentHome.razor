</section>

<!-- Registration status containers -->
<section class="registration-status-container">
    <!-- Registration status dropdown -->
    <div class="registration-status-box">
        <select name="register" id="register" class="exam-info">
            <option value="exam1">End Semester Examination_Semester 03_E22 Batch Registration Status: Closed After 2024.03.20</option>
            <option value="exam2">End Semester Examination_Semester 03_E22 Batch Registration Status: Closed After 2024.03.20</option>
