</section>
<section class="registration-status-container">
    <!-- Registration status dropdown -->
    <div class="registration-status-box">
        <select name="register" id="register" class="exam-info">
            <option value="exam1">End Semester Examination_Semester 03_E22 Batch Registration Status: Closed After 2024.03.20</option>
            <option value="exam2">End Semester Examination_Semester 03_E22 Batch Registration Status: Closed After 2024.03.20</option>
            <option value="exam3">End Semester Examination_Semester 03_E22 Batch Registration Status: Closed After 2024.03.20</option>
        </select>
    </div>
    <!-- Register button 2 -->
    <div class="register-button-container">
        <button class="register-button">Register</button>
    </div>
</section>

<!-- Your Registered Exams -->
<div class="registered-exams">
    Your Registered Exams:
</div>

<!-- Exam details -->
<div class="exam-details">
    <select name="exams" id="exams" class="select-exam">
        <option value="exam1">End Semester Examination_Semester 03_E22 Batch</option>
        <option value="exam2">End Semester Examination_Semester 07_E20 Batch</option>
        <option value="exam3">End Semester Examination_Semester 05_E21 Batch</option>
    </select>
</div>
<div class="exam-details">
    <select name="exams" id="exams" class="select-exam">
        <option value="exam1">End Semester Examination_Semester 03_E22 Batch</option>
        <option value="exam2">End Semester Examination_Semester 06_E20 Batch</option>
        <option value="exam3">Mid Semester Examination_Semester 02_E23 Batch</option>
