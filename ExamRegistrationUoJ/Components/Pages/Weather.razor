@page "/weather"
@using System.Data;
@using ExamRegistrationUoJ.Services
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization

@inject DBInterface Db

@attribute [StreamRendering]
@attribute [Authorize]

<PageTitle>Customers</PageTitle>

<h1>Movies</h1>

<p>Following table shows the longest movies in sakila sample database</p>

<Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
    <Authorized>
        @foreach (var a in @context.User.Claims)
        {
            <p>@a</p>
        }
    </Authorized>
</Microsoft.AspNetCore.Components.Authorization.AuthorizeView>

@if (movies == null)
{
    <p><em>@loading</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow movie in movies.Rows)
            {
                <tr>
                    <td>@movie["title"]</td>
                    <td>@movie["description"]</td>
                    <td>@movie["rating"]</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private DataTable? movies;
    private string loading = "Loading...";

    protected override async Task OnInitializedAsync()
    {
        try { movies = await Db.GetMostRentedFromSakila(); }
        catch (MySqlConnector.MySqlException ex)
        {
            loading = "Unable to load: " + ex.Message;
        }
    }
}
